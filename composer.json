{
    "name": "phlib/string",
    "version": "1.0.0",
    "description": "String functions like ellipsis",
    "authors": [
        {
            "name": "James Dempster"
        }
    ],
    "require": {
        "php": "~5.4"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4",
        "phpmd/phpmd": "~2.2",
        "squizlabs/php_codesniffer": "~2.2"
    },
    "autoload-dev": {
        "psr-4": {
            "Phlib\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpmd ./src/ text cleancode,codesize,controversial,design,naming,unusedcode",
            "phpcs ./src/ --standard=PSR2"
        ]
    }
}
