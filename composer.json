{
    "name": "phlib/string",
    "description": "String functions like ellipsis",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "James Dempster"
        },
        {
            "name": "Phlib Team & Contributors",
            "homepage": "https://github.com/phlib/string/contributors"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-mbstring" : "*"
    },
    "autoload": {
        "files": ["src/String.php"]
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "symplify/easy-coding-standard": "^12"
    },
    "autoload-dev": {
